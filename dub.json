{
	"name": "ebbcfd",
	"description": "A finite volume euler equation cfd solver",
	"copyright": "Copyright Â© 2016, Robert F. Rau II",
	"authors": ["Robert F. Rau II"],
	"dependencies": {
		"numd": "~587_Project",
		"mpi": "~master"
	},
	"configurations": [
		{
			"excludedSourceFiles": [
				"source/mesher.d",
				"source/plotter.d",
				"source/post.d",
				"source/meshopt.d"
			],
			"name": "solver",
			"targetName": "ebb-solve",
			"targetType": "executable"
		},
		{
			"excludedSourceFiles": [
				"source/mesher.d",
				"source/plotter.d",
				"source/post.d",
				"source/solve.d"
			],
			"name": "meshopt",
			"targetName": "ebb-meshopt",
			"targetType": "executable",
			"versions": ["meshopt"]
		},
		{
			"excludedSourceFiles": [
				"source/solver.d",
				"source/plotter.d",
				"source/post.d",
				"source/meshopt.d"
			],
			"name": "mesher",
			"targetName": "ebb-mesh",
			"targetType": "executable"
		},
		{
			"excludedSourceFiles": [
				"source/mesher.d",
				"source/solver.d",
				"source/post.d",
				"source/meshopt.d"
			],
			"name": "plotter",
			"targetName": "ebb-plot",
			"targetType": "executable"
		},
		{
			"excludedSourceFiles": [
				"source/mesher.d",
				"source/solver.d",
				"source/plotter.d",
				"source/meshopt.d"
			],
			"name": "post",
			"targetName": "ebb-post",
			"targetType": "executable"
		}
	],
	"lflags": ["-lparmetis", "-lmetis"],
	"buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "debugInfo"]
		},
		"ldc-release": {
			"buildOptions": ["releaseMode", "inline"],
			"dflags": ["-O5"]
		},
		"flux-release": {
			"buildOptions": ["releaseMode", "inline"],
			"dflags": ["-O5", "-I/home/rrau/numd"],
			"lflags": ["-L$HOME/ldc2-1.0.0-linux-x86_64/lib", "-L$PARMETIS_LIB", "-L$METIS_LIB", "-L$MPI_HOME/lib", "-L$HOME/lib", "$HOME/lib/cblas.a"]
		},
                "prof-release": {
                        "buildOptions": ["releaseMode", "inline", "optimize"],
                        "dflags": ["-I/home/rrau/numd", "-profile"],
                        "lflags": ["-L/usr/lib64", "-L$HOME/lib", "-L$HOME/ldc2-1.0.0-linux-x86_64/lib", "-L$PARMETIS_LIB", "-L$METIS_LIB", "-L$MPI_HOME/lib"]
                },
		"ldc-release-prof": {
			"buildOptions": ["releaseMode", "inline", "debugInfo"],
			"dflags": ["-O5"]
		}
	}
}
